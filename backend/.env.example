# Camunda 8 Cloud Configuration (Recommended for quick start)
ZEEBE_ADDRESS=your-cluster-id.bru-2.zeebe.camunda.io:443
ZEEBE_CLIENT_ID=your-client-id
ZEEBE_CLIENT_SECRET=your-client-secret
ZEEBE_AUTHORIZATION_SERVER_URL=https://login.cloud.camunda.io/oauth/token
ZEEBE_TOKEN_AUDIENCE=zeebe.camunda.io

# Alternative for Self-Managed Camunda 8 (when Docker is running)
# ZEEBE_ADDRESS=localhost:26500
# ZEEBE_GRPC_ADDRESS=localhost:26500

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=policy_management
DB_USER=root
DB_PASSWORD=password

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=24h

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info
